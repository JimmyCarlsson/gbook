<div class="form-horizontal">
  <div class="form-group {{if model.errors.name 'has-error'}}">
    <label for="inputEventName" class="col-sm-2 control-label">Namn</label>
    <div class="col-sm-10">
      {{input id="inputEventName" value=model.name class="form-control" aria-describedby="helpBlockName"}}
      {{#each model.errors.name as |error|}}
        <span class="help-block" id="helpBlockName">{{error.message}}</span>
      {{/each}}
    </div>
  </div>
  <div class="form-group {{if model.errors.description 'has-error'}}">
    <label for="inputEventDescription" class="col-sm-2 control-label">Beskrivning av eventet</label>
    <div class="col-sm-10">
      {{textarea value=model.description class='form-control'}}
      {{#each model.errors.description as |error|}}
        <span class="help-block" id="helpBlockName">{{error.message}}</span>
      {{/each}}
    </div>
  </div>
  <div class="form-group {{if model.errors.date 'has-error'}} ">
    <label for="inputEventDate" class="col-sm-2 control-label">Datum och tid</label>
    <div class="col-sm-10">
      {{bs-datetimepicker date=model.date format='YYYY-MM-DD HH:mm' locale='sv'}}
      {{#each model.errors.date as |error|}}
        <span class="help-block" id="helpBlockName">{{error.message}}</span>
      {{/each}}
    </div>
  </div>
  <div class="form-group {{if model.errors.price 'has-error'}}">
    <label for="inputEventPrice" class="col-sm-2 control-label">Pris</label>
    <div class="col-sm-1">
      {{input value=model.price type='number' min='0' class="form-control"}}
      {{#each model.errors.price as |error|}}
        <span class="help-block" id="helpBlockName">{{error.message}}</span>
      {{/each}}
    </div>
    <label for="inputEventTax25" class="col-sm-2 control-label">25% Skatt</label>
    <div class="col-sm-1">
      {{input value=model.tax25 type='number' min='0' class="form-control"}}
      {{percentageTax25}}%
      {{#each model.errors.tax25 as |error|}}
        <span class="help-block" id="helpBlockName">{{error.message}}</span>
      {{/each}}
    </div>
    <label for="inputEventTax12" class="col-sm-2 control-label">12% Skatt</label>
    <div class="col-sm-1">
      {{input value=model.tax12 type='number' min='0' class="form-control"}}
      {{percentageTax12}}%
      {{#each model.errors.tax12 as |error|}}
        <span class="help-block" id="helpBlockName">{{error.message}}</span>
      {{/each}}
    </div>
    <label for="inputEventTax6" class="col-sm-2 control-label">6% Skatt</label>
    <div class="col-sm-1">
      {{input value=model.tax6 type='number' min='0' class="form-control"}}
      {{percentageTax6}}%
      {{#each model.errors.tax6 as |error|}}
        <span class="help-block" id="helpBlockName">{{error.message}}</span>
      {{/each}}
    </div>
  </div>
  <div class="form-group {{if model.errors.seats 'has-error'}}">
    <label for="inputEventSeats" class="col-sm-2 control-label">Antal platser</label>
    <div class="col-sm-10">
      {{input value=model.seats type='number' min='0' class="form-control"}}
      {{#each model.errors.seats as |error|}}
        <span class="help-block" id="helpBlockName">{{error.message}}</span>
      {{/each}}
    </div>
  </div>
  <div class="form-group {{if model.errors.items 'has-error'}}">
    <label for="inputEventItems" class="col-sm-2 control-label">Tillvalspaket som ska vara tillg√§ngliga</label>
    <div class="col-sm-10">
      {{model.items}}
      {{#each model.errors.items as |error|}}
        <span class="help-block" id="helpBlockName">{{error.message}}</span>
      {{/each}}
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2">Endast admins kan se detta event</label>
    <div class="col-sm-10 material-switch">
      <div class="material-switch pull-left">
        {{input id="hiddenSwitch" type="checkbox" checked=model.hidden }}
        <label for="hiddenSwitch" class="label-success"></label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button {{action 'save'}} class="btn btn-primary">Spara event!</button>
    </div>
  </div>
</div>
