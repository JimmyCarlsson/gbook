<div class="form-horizontal">
  <div class="form-group">
    <label for="identification" class="control-label col-sm-2">E-post</label>
    <div class="col-sm-10">
      {{input id='identification' class="form-control" value=identification}}
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="control-label col-sm-2">Password</label>
    <div class="col-sm-10">
      {{input id='password' class="form-control" type='password' value=password}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button {{action 'authenticate'}} class="btn btn-primary">Logga in</button>
      {{#if errorMessage}}
        <p>{{errorMessage}}</p>
      {{/if}}
    </div>
  </div>
</div>
